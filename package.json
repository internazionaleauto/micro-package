{
  "license": "MIT",
  "version": "1.0.0",
  "name": "micro-package",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "internazionaleauto",
  "module": "dist/micro-package.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "dts lint",
    "test": "dts test",
    "size": "size-limit",
    "start": "dts watch",
    "build": "dts build",
    "prepare": "dts build",
    "analyze": "size-limit --why",
    "publish": "npm publish --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=20"
  },
  "size-limit": [
    {
      "path": "dist/micro-package.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/micro-package.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.2",
    "dts-cli": "^2.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "size-limit": "^8.2.6",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "url": "https://github.com/internazionaleauto/micro-package"
  }
}